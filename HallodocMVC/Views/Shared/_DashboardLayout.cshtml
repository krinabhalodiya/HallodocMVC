﻿@using static HallodocMVC.Models.CV;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloDoc</title>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/dashboard.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="bg-light">
    <header class="bg-white shadow">
        <div class="d-flex justify-content-between rounded-0 py-2 mx-3">
            <i class="fa fa-solid fa-bars text-info border rounded border-info d-block d-sm-none align-self-center my-3 p-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"></i>
            <img class="img-fluid img-responsive header-img" src="~/images/Fig56._Patient_site_1.png" />
            <div class="d-inline-flex align-items-center p-3">
                <label class="d-none d-sm-block">Welcome <strong>@CV.UserName()</strong></label>
                <a asp-controller="Login" asp-action="Logout" class="text-decoration-none"><i class="d-block d-sm-none fa fa-solid fa-arrow-right-from-bracket text-info border rounded border-info mx-3 mx-xs-2 my-3 p-2"></i></a>
                <a asp-controller="Login" asp-action="Logout" class="d-none d-sm-block btn border border-info text-info mx-3  mx-xs-2">Logout</a>
                <a href=""><i class="fa fa-moon text-info border rounded border-info my-3 p-2"></i></a>
            </div>
        </div>

        <partial name="../_PartialViews/PatientSubNav" />
    </header>

    <div class="offcanvas offcanvas-start w-50" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome <strong>@CV.UserName()</strong></h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none text-dark">Dashboard</a></li>
                <li class="list-group-item"><a asp-controller="Profile" asp-action="Index" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item"><a class="text-decoration-none text-dark" href="#">Agreement</a></li>
            </ul>
        </div>
    </div>

    <main role="main" class="pb-3 container-fluid px-5">
        @RenderBody()
    </main>
    <footer class="fixed-bottom">
        <div class=" justify-content-end position-static  w-100 align-self-end d-flex left-0 bg-dark text-light px-2 align-items-end  bottom-0 py-3 fs-7 align-text-bottom align-items-end">
            <div class="text-center">

                <span class="text-center mx-2">
                    Term Of Condition
                </span>
                <span>
                    I
                </span>
                <span class="mx-2">
                    Privacy Policy
                </span>
            </div>
        </div>
    </footer>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>@*
