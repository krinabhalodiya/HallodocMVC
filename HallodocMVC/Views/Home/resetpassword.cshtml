@{
    ViewData["Title"] = "123";
}
@model HallodocMVC.Models.ResetPass

<div class="logindivgrp position-relative">
    <div class="row my-4">
        <div class="col-xl-4 col-md-8 maindiv mx-auto">
            <a class="text-decoration-none text-info h6 back" asp-controller="Home" asp-action="Login">
                <i class="fa fa-angle-left fa-2x text-info align-middle"></i>
                <span class="align-middle"><b class="align-text-top">&nbsp;&nbsp;Back</b></span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 text-center">
            <h1>Reset Your Password</h1>
        </div>
    </div>
 
    <form method="post" asp-action="SavePassword" asp-controller="Home">
        <input type="hidden" asp-for="email" value="@TempData["email"]" />
        <div class="row my-4">
            
            @* /@TempData["PasswordCompare"] *@
            <div class="col-xl-4 col-md-8 maindiv mx-auto">
                <div class="form-floating email">
                    <input type="text" class="form-control shadow-none" asp-for="Password" id="floatingInputValue" placeholder="Password">
                    <label for="floatingInputValue colour-info">Password</label>
                    <button class="btn btn-light">
                        <i class='fa fa-user-circle field-icon position-relative'></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-xl-4 col-md-8 maindiv mx-auto">
                <div class="form-floating email">
                    <input type="text" class="form-control shadow-none" asp-for="confirmpassword" id="floatingInputValue" placeholder="Confirm Password">
                    <label for="floatingInputValue colour-info">Confirm Password</label>
                    <button class="btn btn-light">
                        <i class='fa fa-user-circle field-icon position-relative'></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="row my-4">
            <div class="col-xl-4 col-md-8 maindiv mx-auto">
                <input type="submit" class="form-control btn btn-info text-light" value="Reset Password">
            </div>
            
        </div>
    </form>
  
    <div class="row">
        <div class="col-12 text-center">
            <b>
                <a class="text-decoration-none text-info h6 back" asp-controller="Home" asp-action="Login">
                    <i class="fa fa-angle-left fa-2x text-info align-middle"></i>
                    <span class="align-middle"><b class="align-text-top">&nbsp;&nbsp;Back to Login</b></span>
                </a>
            </b>
        </div>
    </div>
</div>

