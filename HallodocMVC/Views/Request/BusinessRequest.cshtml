
@{
    ViewData["Title"] = "BusinessRequest";
}
@model HallodocMVC.Models.ViewDataBusinessRequest;
<partial name="../_PartialViews/PartialConformationModel" />
<div class="container">
    <div class="position-relative">
        <div class="row">
            <div class="col-xl-12 text-center">
                <a asp-controller="Request" asp-action="Index" class="btn btn-outline-info backbtnreq">
                    <i class="fa fa-angle-left fa-2x text-info align-middle"></i>
                    <span class="align-middle text-info">
                        <b class="align-text-top">&nbsp;&nbsp;Back</b>
                    </span>
                </a>
            </div>
        </div>
        <!-- form -->
        <div class="divgrpreq mx-xl-4 mx-md-3 mx-sm-2 bg-white rounded">

            <!-- Family/Friend Information -->
            <div class="row p-3">
                <div class="col-12">
                    <h5><b>Business Information</b></h5>
                </div>
            </div>
            <form method="post" asp-controller="BusinessRequest" asp-action="Create">
                <div class="row px-3">
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="BUP_FirstName" type="text" class="form-control shadow-none" id="fname" placeholder="First Name">
                            <label for="fname">Your First Name</label>
                        </div>
                        <span asp-validation-for="BUP_FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="BUP_LastName" type="text" class="form-control shadow-none" id="lname" placeholder="Last Name">
                            <label for="lname">Your Last Name</label>
                        </div>
                        <span asp-validation-for="BUP_LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 phone">
                        <div class="form-floating">
                            <input asp-for="BUP_PhoneNumber" type="number" class="form-control shadow-none" id="phone">
                        </div>
                        <span asp-validation-for="BUP_PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="BUP_Email" type="text" class="form-control shadow-none" id="Email" placeholder="Your Email">
                            <label for="Email">Your Email</label>
                        </div>
                        <span asp-validation-for="BUP_Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="BUP_PropertyName" type="text" class="form-control shadow-none" id="Property" placeholder="Business/Property Name">
                            <label for="Property">Business/Property Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="BUP_CaseNumber" type="text" class="form-control shadow-none" id="Case" placeholder="Case Number">
                            <label for="Case">Case Number(Optional)</label>
                        </div>
                    </div>
                </div>

                <!-- patient Information -->
                <div class="row p-3">
                    <div class="col-12">
                        <h5><b class="">Patient Information</b></h5>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea asp-for="Symptoms" class="w-100 form-control txtarea shadow-none" id="floatingInputValue"></textarea>
                            <label for="floatingInputValue">Enter Brief Details Of Symptoms(Optional)</label>
                        </div>
                        <span asp-validation-for="Symptoms" class="text-danger"></span>
                    </div>
                </div>
                <div class="row px-3">
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="FirstName" type="text" class="form-control shadow-none" id="fname" placeholder="First Name">
                            <label for="fname">First Name</label>
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="LastName" type="text" class="form-control shadow-none" id="lname" placeholder="Last Name">
                            <label for="lname">Last Name</label>
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="BirthDate" type="date" class="form-control shadow-none" id="dob" placeholder="Date Of Birth">
                            <label for="dob">Date Of Birth</label>
                        </div>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Patient contact Information -->
                <div class="row p-3">
                    <div class="col-12">
                        <h5><b>Patient Contact Information</b></h5>
                    </div>
                </div>
                <div class="row px-3">
                    <div class="col-md-6  pb-3">
                        <div class="form-floating">
                            <input asp-for="Email" type="text" class="form-control shadow-none" id="email" placeholder="Email">
                            <label for="email">Email</label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 phone">
                        <div class="form-floating">
                            <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none" id="phone1">
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <!-- Patient Location -->
                <div class="row p-3">
                    <div class="col-12">
                        <h5><b>Patient Location</b></h5>
                    </div>
                </div>
                <div class="row px-3">
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="Street" type="text" class="form-control shadow-none" id="Street" placeholder="Street">
                            <label for="Street">Street</label>
                        </div>
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="City" type="text" class="form-control shadow-none" id="City" placeholder="City">
                            <label for="City">City</label>
                        </div>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="State" type="text" class="form-control shadow-none" id="State" placeholder="State">
                            <label for="State">State</label>
                        </div>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 pb-3">
                        <div class="form-floating">
                            <input asp-for="ZipCode" type="text" class="form-control shadow-none" id="Zip" placeholder="Zip Code">
                            <label for="Zip">Zip Code</label>
                        </div>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="RoomSite" type="text" class="form-control shadow-none" id="Room" placeholder="Room # / Suits">
                            <label for="Room">Room # / Suits (Optional)</label>
                        </div>
                    </div>
                </div>

                <!-- cancel submit button -->
                <div class="row px-3 py-3">
                    <div class="col-12 d-flex justify-content-end">
                        <input type="submit" class="btn btn-info btn-md text-white mx-3">
                        <button type="reset" class="btn btn-white btn-md text-info border border-info">Cancel</button>
                    </div>
                </div>
            <!-- form end -->
            </form>
        </div>
    </div>
</div>